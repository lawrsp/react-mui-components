{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/**/*.test.*", "src/**/*.stories.*", "stories"]
}
