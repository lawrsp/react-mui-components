{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["src/setupTests.ts", "**/*/*.test.*", "**/*/*.stroies.*"],
  "compileOnSave": false
}
