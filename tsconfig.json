{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react-jsx",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",

    "baseUrl": "src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/**/*.test.*", "src/**/*.stories.*", "stories"]
}
